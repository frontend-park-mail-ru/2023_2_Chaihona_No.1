<div class = 'subscription-level'>
    <p style="font-weight: 700">{{name}}</p>
    <p style="font-weight: 400; color: rgba(0, 0, 0, 0.60);">{{cost_integer}}.{{cost_fractional}} {{currency}} в месяц</p>
    <p style="font-weight: 400; color: rgba(0, 0, 0, 0.60);">{{description}}</p>
    {{#unless isOwner}}
        {{#if has}}
            <button class='subscription-level__buy-button sub-level-btn' id="sub-level-btn-{{id}}" data-subbed="true" data-id="{{id}}"> Отписаться </button>
        {{else}}
            <button class='subscription-level__buy-button sub-level-btn' id="sub-level-btn-{{id}}" data-subbed="false" data-id="{{id}}"> Подписаться </button>
        {{/if}}
    {{/unless}}
</div>