

<div class="user-cover"></div>

<div class="page-data">

    <div class="left-column">
        <div class="ava-block">
            <div class="ava"></div>
            <div class="subs-amount">{{donated}}</div>
            <div class="subs-word">Пожертвовано</div>
        </div>
    </div>

    <div class="main-data">
        <div class="name-and-status">
            <img src="icons/Settings2.svg" id = "status-setting" class="page-settings">
            <div class="nickname">{{user.login}}</div>
            <div class="status">{{user.status}}</div>
        </div>
    </div>
    <div class="right-column">
        <div class="subscriptions">
            Подписки
            <div class = 'target-separator'></div>
            {{#each subs}}
                <div class="sub-element">
                    <img src="img/default-ava.png">
                    {{this.name}}
                </div>
            {{/each}}
        </div>
    </div>

</div>