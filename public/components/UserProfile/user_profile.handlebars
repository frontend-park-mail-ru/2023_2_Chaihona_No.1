<link rel="stylesheet" href="components/UserProfile/user_profile.css">

<div class="user-cover"></div>

<div class="page-data">

    <div class="left-column">
        <div class="ava-block">
            <div class="ava"></div>
            <div class="subs-amount">{{user.donated}}</div>
            <div class="subs-word">Пожертвовано</div>
        </div>
    </div>

    <div class="main-data">
        <div class="name-and-status">
            <div class="nickname">{{user.login}}</div>
            <div class="status">{{user.status}}</div>
        </div>
    </div>
    <div class="right-column">
        <div class="subscriptions">
            Подписки
            <div class = 'target-separator'></div>
            {{#each subscribtions}}
                <div class="sub-element">
                    <img src="img/default-ava.png">
                    {{this.login}}
                </div>
            {{/each}}
        </div>
    </div>

</div>